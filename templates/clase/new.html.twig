{% extends 'base.html.twig' %}

{% block title %}AGREGAR CLASE{% endblock %}

{% block body %}
{#    {% block stylesheets %} <link rel="stylesheet" href="{{ asset('/css/list.css') }}"> {% endblock %}#}
{#    Se importa el css de edit clase, ya que son Forms generados por symfony, pueden compartir casi todos los estilos#}
    {% block stylesheets %}

        <link rel="stylesheet" href="{{ asset('/css/addClase.css') }}">
        <link rel="stylesheet" href="{{ asset('/css/editClase.css') }}">
        <link rel="stylesheet" href="{{ asset('/css/general.css') }}">
    {% endblock %}
    {{ include('clase/_form.html.twig') }}


    <a href="{{ path('clase_index') }}" class="link link-button">Volver al principio</a>
    <script>
        // Div contenedor necesario para poder agrupar los botones, ya que
        // el segundo boton es un formulario
        const button = document.querySelector('form button:last-child')
        const a = document.querySelectorAll('a[href="/clase/"]')[1]


        const div = document.createElement('div')
        div.appendChild(button)
        div.appendChild(a)
        document.getElementsByTagName('form')[0].appendChild(div)
    </script>
{% endblock %}
