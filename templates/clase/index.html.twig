{% extends 'base.html.twig' %}

{% block title %}Clase index{% endblock %}

{% block body %}
    <h1>Clase index</h1>
    <header>
        {% include '/admin/nav.html.twig' %}
    </header>
    <table class="table">
        <thead>
            <tr>
{#                <th>Id</th>#}
                <th>Nombre_clase</th>
                <th>Dias_semana</th>
                <th>Hora_inicio</th>
                <th>Hora_fin</th>
                <th>Max_alumnos</th>
                <th>Min_alumnos</th>
                <th>Disponible</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for clase in clases %}
            <tr>
{#                <td>{{ clase.id }}</td>#}
                <td>{{ clase.nombreClase }}</td>
                <td>{{ clase.diasSemana }}</td>
                <td>{{ clase.horaInicio }}</td>
                <td>{{ clase.horaFin }}</td>
                <td>{{ clase.maxAlumnos }}</td>
                <td>{{ clase.minAlumnos }}</td>
                <td>{{ clase.disponible }}</td>
                <td>
                    <a href="{{ path('clase_show', {'id': clase.id}) }}">show</a>
                    <a href="{{ path('clase_edit', {'id': clase.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('clase_new') }}">Create new</a>
{% endblock %}
