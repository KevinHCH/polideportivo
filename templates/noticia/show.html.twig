{% extends 'base.html.twig' %}

{% block title %}Noticia{% endblock %}

{% block body %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('/css/list.css') }}">
        <link rel="stylesheet" href="{{ asset('/css/general.css') }}">
    {% endblock %}
    {% include '/admin/nav.html.twig' %}
    <div class="container">
        <h1>Titulo: {{ noticium.titulo }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ noticium.id }}</td>
            </tr>
            {#            <tr>#}
            {#                <th>Titulo</th>#}
            {#                <td>{{ noticium.titulo }}</td>#}
            {#            </tr>#}
            <tr>
                <th>Contenido</th>
                <td>{{ noticium.contenido }}</td>
            </tr>
            <tr>
                <th>Imgagen de la noticia</th>
                <td>
                    <figure>
                        <img src="{{ noticium.imgNoticia }}" alt="imagen de la noticia">
                    </figure>
                </td>
            </tr>
            <tr>
                <th>Fecha creacion</th>
                <td>{{ noticium.fechaCreacion ? noticium.fechaCreacion|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fecha modificacion</th>
                <td>{{ noticium.fechaModificacion ? noticium.fechaModificacion|date('Y-m-d') : 'AÃºn no se ha modificado la noticia' }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ noticium.autor }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('noticia_index') }}" class="link link-button">Volver a la lista</a>

        <a href="{{ path('noticia_edit', {'id': noticium.id}) }}" class="link link-edit">Editar la noticia</a>

        {{ include('noticia/_delete_form.html.twig') }}
    </div>
{% endblock %}
