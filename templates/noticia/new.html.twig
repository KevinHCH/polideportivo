{% extends 'base.html.twig' %}

{% block title %}AGREGAR NOTICIA{% endblock %}

{% block body %}
    {% block stylesheets %}


        <link rel="stylesheet" href="{{ asset('/css/editClase.css') }}">
        <link rel="stylesheet" href="{{ asset('/css/addNoticia.css') }}">
        <link rel="stylesheet" href="{{ asset('/css/general.css') }}">

    {% endblock %}
    {% include '/admin/nav.html.twig' %}
    <div class="container">
        {{ include('noticia/_form.html.twig') }}

        <a href="{{ path('noticia_index') }}" class="link link-button">Volver a la lista</a>
    </div>
    <script>
        // Div contenedor necesario para poder agrupar los botones, ya que
        // el segundo boton es un formulario
        const button = document.querySelector('form button:last-child')
        const a = document.querySelectorAll('a[href="/noticia/"]')[0]
        console.log(a)


        const div = document.createElement('div')
        div.appendChild(button)
        div.appendChild(a)
        document.getElementsByTagName('form')[0].appendChild(div)
    </script>
{% endblock %}
