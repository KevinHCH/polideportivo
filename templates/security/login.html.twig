{% extends 'base.html.twig' %}

{% block title %}INICIAR SESION{% endblock %}

{% block body %}
    {% block stylesheet %}
        <link rel="stylesheet" href="{{ asset('/css/login.css') }}">
        {% endblock %}
    <div class="bg-blur"></div>
<div class="container">
    <form method="post">
        {% if error %}
            <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1>Iniciar Sesi칩n</h1>
        <div>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
        </div>
        <div>
            <label for="inputPassword" >Contrase침a</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Contrase침a" required>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >



        <div>
            <button class="link login" type="submit">
                Iniciar sesi칩n
            </button>
            <a href="{{ asset('/registro') }}" class="link registro">Registrate</a>
        </div>
    </form>
</div>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
{% endblock %}
